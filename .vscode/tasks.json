{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build program",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "${fileDirname}/program"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run program",
            "type": "shell",
            "command": "${fileDirname}/program",
            "dependsOn": "build program",
            "options": {
                "cwd": "${fileDirname}",
                "presentation": {
                    "echo": true,
                    "reveal": "always",
                    "focus": true,
                    "panel": "dedicated",
                    "clear": true
                }
            },
            "problemMatcher": []
        }
    ]
}
